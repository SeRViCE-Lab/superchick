<Node name="SphereNode">
  <MeshVTKLoader name="sphere_loader" filename="../meshes/sphere.vtk"/>
    <Mesh name="sphere_mesh" src="@sphere_loader"/>
    <MechanicalObject name="spherical-states" src="@sphere_loader" />
    <TetrahedronSetTopologyContainer name="SphereTetra" src="@sphere_loader" />
    <TetrahedronSetGeometryAlgorithms name="SpherePoints" template="Vec3d"  drawTetrahedra="1"/>
    <OglModel name="SphereVisu" src="@sphere_loader" translation="0 0 0"  color="gray" />
</Node>
